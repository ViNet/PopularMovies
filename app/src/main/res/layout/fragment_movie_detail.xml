<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_movie_detail">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailTitle"
            android:singleLine="true"
            android:background="@color/background_movie_title"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/detail_title_vertical_padding"
            android:paddingTop="@dimen/detail_title_vertical_padding"
            android:paddingLeft="@dimen/detail_title_left_padding"
            android:textColor="@color/text_movie_title"
            android:textSize="36sp" />

        <!-- SHADOW -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/detail_content_padding"
            android:paddingRight="@dimen/detail_content_padding"
            android:paddingTop="@dimen/detail_content_padding">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/detail_content_padding">

                <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ivDetailPoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDetailYear"
                    android:textColor="@color/text_primary"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDetailRuntime"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDetailRating"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mark as favorite" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDetailOverview"
            android:paddingLeft="@dimen/detail_content_padding"
            android:paddingRight="@dimen/detail_content_padding"
            android:paddingTop="@dimen/detail_content_padding"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <!-- vertical divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_primary"
            android:layout_marginRight="@dimen/detail_content_padding"
            android:layout_marginLeft="@dimen/detail_content_padding"
            android:layout_marginTop="@dimen/detail_content_padding"
            android:layout_marginBottom="@dimen/detail_content_padding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:paddingLeft="@dimen/detail_content_padding"
            android:paddingRight="@dimen/detail_content_padding"
            android:text="Trailers"
            />

        <android.support.v7.widget.RecyclerView
            android:background="@color/background_movie_detail"
            android:id="@+id/rvTrailersList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:clickable="true"
            android:paddingLeft="@dimen/detail_content_padding"
            android:paddingRight="@dimen/detail_content_padding"

            />

    </LinearLayout>

</ScrollView>