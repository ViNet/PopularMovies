<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/containerMovieTrailers"
    android:paddingBottom="1dp"
    android:background="@color/background_movie_detail_primary"
    android:visibility="gone">

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/detail_content_padding"
        android:background="@color/text_secondary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/detail_content_padding"
        android:paddingRight="@dimen/detail_content_padding"
        android:paddingBottom="8dp"
        android:text="@string/trailers"
        android:textColor="@color/text_primary"
        android:textAppearance="@android:style/TextAppearance.Medium" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTrailersList"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/background_movie_detail_primary"
        android:clickable="true"
         />

</LinearLayout>